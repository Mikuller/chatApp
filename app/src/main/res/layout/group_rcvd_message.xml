<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receivedmsg_shape"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/txtGroupChatSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sender Name"
            android:layout_alignParentStart="true"
            android:textStyle="italic|bold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/purple_700"/>

        <TextView
            android:id="@+id/txtReceivedMessageInGroupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is sent Message inside the group chat"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_below="@+id/txtGroupChatSender"
            />

    </RelativeLayout>


</RelativeLayout>